@model Blog.Models.LoginViewModel
@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resenha Cultural</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css" class="href" />
    <link rel="stylesheet" href="~/Content/estilo.css" type="text/css" class="href" />
</head>
<body>
    <div class="container" style="margin-left: 20%; margin-top: 10%;">
        <main id="login-form">
            <h2>Resenha Cultural - Login</h2>
            @using (Html.BeginForm())
            {

                <div class="form-group">
                    @Html.LabelFor(u => u.Usuario)
                    @Html.TextBoxFor(u => u.Usuario, new { @class = "form-control", placeholder = "Usuário" })
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.Senha)
                    @Html.PasswordFor(u => u.Senha, new { @class = "form-control", placeholder = "Senha" })
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
                @Html.ValidationSummary()
             }
        </main>
    </div>
</body>
</html>