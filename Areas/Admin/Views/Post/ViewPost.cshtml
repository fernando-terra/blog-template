@model Blog.Models.Post
<div>
    @using (Html.BeginForm("Edita", "Post"))
    {
        @Html.HiddenFor(post => post.Id)
        @Html.HiddenFor(post => post.Publicado)
        @Html.HiddenFor(post => post.DataPublicacao)

        @Html.EditorFor(post => post)

        <button type="submit" class="btn btn-primary">Atualizar</button>
    }
</div>

@section Scripts {
    @Html.Partial("_ScriptsDeEdicao")
}